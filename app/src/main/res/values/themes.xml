<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EasyYoga" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    //custom styles
    <style name="LayoutEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:drawablePadding">12dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:layout_margin">32dp</item>
        <item name="helperTextTextColor">@color/errorColor</item>
        <item name="android:state_enabled">false</item>
        <item name="boxStrokeColor">@color/layout_down</item>
        <item name="android:textColorHint">@color/layout_down</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
    </style>

    <style name="AllText" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/light</item>
        <item name="android:letterSpacing">0.1</item>
    </style>
</resources>